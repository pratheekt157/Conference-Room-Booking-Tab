<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!--feedback layout-->
    <RelativeLayout
            android:background="@drawable/gradiant_for_feedback"
            android:id="@+id/feedback_main_layout"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <RelativeLayout
                android:background="@color/light_color_gradiant"
                android:id="@+id/feedback_confirm_layout"
                android:layout_marginStart="@dimen/dp_177"
                android:layout_marginEnd="@dimen/dp_177"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/got_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginStart="@dimen/dp_24"
                    android:textColor="@color/white"
                    android:text="@string/got_feedback"
                    android:textSize="@dimen/sp_24"
                    android:fontFamily="@font/nunito"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_below="@+id/got_feedback"
                    android:id="@+id/feedback_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                        android:layout_marginStart="@dimen/dp_16"
                        android:id="@+id/img_1"
                        android:onClick="badFeedback"
                        android:src="@drawable/ic_rate_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img_2"
                        android:layout_marginStart="@dimen/dp_64"
                        android:src="@drawable/ic_rate_3"
                        android:onClick="averageFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <ImageView
                        android:id="@+id/img_3"
                        android:layout_marginStart="@dimen/dp_64"
                        android:src="@drawable/ic_rate_5"
                        android:onClick="goodFeedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <EditText
                    android:layout_below="@id/feedback_layout"
                    android:id="@+id/feedback_edit_text"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/dp_48"
                    android:paddingStart="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/dp_8"
                    android:layout_marginRight="@dimen/dp_24"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:textColor="#80FFFFFF"
                    android:textColorHint="#80FFFFFF"
                    android:fontFamily="@font/nunito"
                    android:textSize="@dimen/sp_18"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/good_feedback_placeholder"
                    android:background="@drawable/feedback_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_135"/>
            <TextView
                    android:id="@+id/send_feedback"
                    android:gravity="center"
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_48"
                    android:layout_alignParentBottom="true"
                    android:text="@string/submit"
                    android:layout_toRightOf="@id/cancel_feedback"
                    android:onClick="submitFeedback"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:textStyle="bold"
                    android:background="@drawable/action_button_border"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/dp_24"
                    android:textSize="@dimen/sp_18"/>

            <TextView
                    android:id="@+id/cancel_feedback"
                    android:gravity="center"
                    android:layout_width="@dimen/dp_135"
                    android:layout_height="@dimen/dp_48"
                    android:layout_alignParentBottom="true"
                    android:text="@string/cancel"
                    android:onClick="cancelFeedback"
                    android:layout_marginBottom="@dimen/dp_60"
                    android:textStyle="bold"
                    android:background="@drawable/action_button_border"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/dp_24"
                    android:textSize="@dimen/sp_18"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>