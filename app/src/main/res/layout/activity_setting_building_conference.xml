<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:background="#404756"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">


        <TextView
                android:textSize="32sp"
                android:gravity="center"
                android:fontFamily="@font/audiowide"
                android:textColor="@color/white"
                android:text="Conference Room Booking \n Smart Way To Book Conference Room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:background="@drawable/room_details_gradiant"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <ImageView
                android:layout_margin="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:src="@drawable/nineleaps_logo_in_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:fontFamily="@font/nunito"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_margin="@dimen/dp_24"
                android:text="Setup"
                android:id="@+id/setup_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Spinner
                android:layout_width="500dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"

                android:id="@+id/building_spinner"
                android:layout_marginStart="300dp"
                android:layout_below="@id/setup_label"
                android:textColorHint="#FFFFFF"
                android:dropDownVerticalOffset="50dp"
                android:background="@drawable/border_around_set_up"/>

        <Spinner
                android:layout_width="500dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/building_spinner"
                android:id="@+id/conference_spinner"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="32dp"
                android:dropDownVerticalOffset="50dp"
                android:background="@drawable/border_around_set_up"/>

        <TextView
                android:id="@+id/set_up_room"
                android:gravity="center"
                android:layout_width="135dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:onClick="startMeeting"
                android:visibility="visible"
                android:background="@drawable/action_button_border"
                android:fontFamily="@font/nunito"
                android:textColor="@color/white"
                android:layout_marginBottom="32dp"
                android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>

