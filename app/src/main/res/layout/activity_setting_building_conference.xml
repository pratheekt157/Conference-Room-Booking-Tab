<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="#363636"
    android:id="@+id/setting_activity"
    android:layout_height="match_parent"
    tools:context=".ui.SettingBuildingConferenceActivity">

    <RelativeLayout
    android:id="@+id/room_details_layout"
    android:background="#363636"
    android:layout_width="match_parent"
    android:layout_height="270dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80sp"
        android:fontFamily="@font/abel"
        android:layout_marginTop="10dp"
        android:layout_marginStart="70dp"
        android:textColor="@color/white"
        android:text="Setup"/>



    </RelativeLayout>

</RelativeLayout>
       <Spinner
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/building_spinner"
        android:layout_marginStart="300dp"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="300dp"
        android:dropDownVerticalOffset="50dp"
        android:background="@drawable/border_around_set_up"
        />
    <Spinner
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/building_spinner"
        android:id="@+id/conference_spinner"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="50dp"
        android:dropDownVerticalOffset="50dp"
        android:background="@drawable/border_around_set_up"
        />
    <Button
        android:id="@+id/set_up_room"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_arround_start_button"
        android:text="Configure"
        android:fontFamily="@font/abel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_below="@id/conference_spinner"
        android:layout_marginTop="80dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
