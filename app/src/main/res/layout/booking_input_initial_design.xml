<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/room_details_layout"
            android:background="@drawable/room_details_gradiant"
            android:layout_width="653dp"
            android:layout_height="207dp">
        <TextView
                android:id="@+id/room_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:text="Conference Room Name"
                android:fontFamily="@font/nunito"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="top"/>
        <TextView
                android:layout_below="@id/room_text_view"
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:text="Main Building"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_location"
                android:fontFamily="@font/nunito"
                android:textSize="14sp"
                android:textColor="#F2F2F2"/>

        <TextView
                android:layout_below="@id/location_text_view"
                android:id="@+id/capacity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_room_capacity"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:text="5 seater"
                android:fontFamily="@font/nunito"
                android:textSize="14sp"
                android:textColor="#F2F2F2"/>

        <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="Tuesday, June 18 2019"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito"
                android:layout_marginEnd="24dp"
                />

        <TextView
                android:layout_marginBottom="48dp"
                android:layout_alignParentBottom="true"
                android:layout_above="@id/date_text_view"
                android:id="@+id/time_text_view"
                android:fontFamily="@font/nunito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:text="6:36 PM"
                android:textSize="36sp"
                android:textColor="@color/white"/>
        <TextView
                android:id="@+id/available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:text="Available"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:textSize="24sp"
                android:drawableStart="@drawable/ic_status_of_room"
                android:fontFamily="@font/nunito"
                android:textColor="@color/white"
        />
    </RelativeLayout>
    <RelativeLayout
            android:layout_below="@+id/room_details_layout"
            android:id="@+id/meeting_details_layout"
            android:background="#404756"
            android:layout_width="653dp"
            android:layout_height="match_parent">

    </RelativeLayout>
    <RelativeLayout
            android:background="#E5E5E5"
            android:id="@+id/meeting_details_for_the_day_layout"
            android:layout_toEndOf="@id/room_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
            android:text="All Meetings"
            android:textSize="18sp"
            android:id="@+id/all_meetings_label"
            android:layout_marginTop="24dp"
            android:layout_marginStart="@dimen/dp_24"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/all_meetings_label"
                android:layout_margin="2dp"
                android:id="@+id/recycler_view_booking_list"
                android:layout_width="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="match_parent"
                tools:listitem="@layout/meeting_list_layout"/>
    </RelativeLayout>
</RelativeLayout>